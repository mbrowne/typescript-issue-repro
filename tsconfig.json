{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/shared/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "skipLibCheck": true
  },
  "exclude": [
    "*.config.js",
    "acceptance-tests",
    "build",
    "config",
    "coverage",
    "jest",
    "node_modules",
    "public",
    "reports",
    "scripts",
    "server",
    "ssr-build",
    "tsconfig-bootstrap-paths.js"
  ]
}
